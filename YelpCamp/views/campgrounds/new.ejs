<% layout('layouts/boilerplate')%>

    <div class="row">
        <h1 class="text-center">New campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                    <div class="valid-feedback">
                        Looks okay!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                    <div class="valid-feedback">
                        Looks okay!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">Pictures</label>
                    <input class="form-control" type="file" name="image" id="formFile" multiple>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="Image">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" required>
                    <div class="valid-feedback">
                        Looks okay!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for=price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0" name="campground[price]"
                            aria-label="Amount (to the nearest dollar)" required>
                        <span class="input-group-text">.00</span>
                        <div class="valid-feedback">
                            Looks okay!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for=description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" row="3"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks okay!
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Add Campground</button>
                </div>
            </form>
        </div>
    </div>